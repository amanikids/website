.paypal
  %h3 Schedule a Monthly Donation
  - form_tag ActiveMerchant::Billing::Integrations::Paypal.service_url, :method => :get do
    .field
      - donation_page.donation_amounts_list.each_with_index do |amount, index|
        %label
          = radio_button_tag :a3, amount, index.zero?
          = amount
          = donation_page.currency
          each Month

    .field
      = submit_tag 'Donate Online'

    .field
      = hidden_field_tag :business, donation_page.paypal_account
      = hidden_field_tag :cmd, '_xclick-subscriptions'
      = hidden_field_tag :currency_code, donation_page.currency
      = hidden_field_tag :item_name, "Monthly Donation to Amani Children's Home"
      = hidden_field_tag :no_note, 1
      = hidden_field_tag :no_shipping, 1
      = hidden_field_tag :p3, 1
      = hidden_field_tag :rm, 1
      = hidden_field_tag :src, 1
      = hidden_field_tag :t3, 'M'

  %h3 Make a One-time Donation
  - form_tag ActiveMerchant::Billing::Integrations::Paypal.service_url, :method => :get do
    .field
      - donation_page.donation_amounts_list.each_with_index do |amount, index|
        %label
          = radio_button_tag :amount, amount, index.zero?
          = amount
          = donation_page.currency

    .field
      = submit_tag 'Donate Online'

    .field
      = hidden_field_tag :business, donation_page.paypal_account
      = hidden_field_tag :cmd, '_donations'
      = hidden_field_tag :currency_code, donation_page.currency
      = hidden_field_tag :item_name, "One-time Donation to Amani Children's Home"
      = hidden_field_tag :no_note, 1
      = hidden_field_tag :no_shipping, 1
      = hidden_field_tag :rm, 1
