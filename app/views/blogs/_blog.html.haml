= render :partial => 'blogs/archive', :locals => { :blog => blog }

.blog_text
  %h2= blog.title

  - blog.sorted_children.recent.each do |post|
    .post
      %h3= link_to post.title, post.path
      .timestamp
        Posted on
        = post.created_at.to_date.to_s(:long_ordinal) + '.'
      = textilize post.body
