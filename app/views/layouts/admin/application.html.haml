%html{html_attrs}
  %head
    = stylesheet_link_tag 'admin'

  %body.admin
    - if @current_user
      %ul
        %li
          Logged in as
          = @current_user.login
        %li
          = link_to 'Logout', admin_user_session_path, :method => :delete

    .content
      = yield