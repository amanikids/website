%h1 Gallery
- form_for [:admin, @gallery] do |form|
  = form.error_messages
  .field
    = form.label :parent_id
    = form.select :parent_id, parents
  .field
    = form.label :title
    = form.text_field :title
  .field
    = form.label :slug
    = form.text_field :slug
  .field
    = form.submit 'Save and Continue Editing', :name => 'gallery[continue_editing]'
    = form.submit 'Save and Close'
    or
    = link_to 'Cancel', admin_sections_path
