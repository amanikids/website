%li[composite_page]
  - if recurse && composite_page.parent.sort_children_by_position?
    = link_to '&uarr;', admin_composite_page_path(composite_page, :composite_page => { :move_higher => true }), :method => :put
    = link_to '&darr;', admin_composite_page_path(composite_page, :composite_page => { :move_lower => true }), :method => :put

  = composite_page.title

  = link_to 'View', composite_page.path
  = link_to 'Edit', edit_admin_composite_page_path(composite_page)
  = link_to 'Delete', admin_composite_page_path(composite_page), :method => :delete, :confirm => 'Are you sure you want to delete this Composite Page?'
