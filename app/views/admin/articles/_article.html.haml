%li
  = link_to '&uarr;', admin_article_path(article, :article => { :move_higher => true }), :method => :put
  = link_to '&darr;', admin_article_path(article, :article => { :move_lower => true }), :method => :put
  = article.title
  = link_to 'Edit', edit_admin_article_path(article)
  = link_to 'Delete', admin_article_path(article), :method => :delete, :confirm => 'Are you sure you want to delete this Article?'
