%h1 Blog
- form_for [:admin, @blog], :html => { :multipart => true } do |form|
  = form.error_messages
  .field
    = form.label :parent_id
    = form.hidden_field :parent_id
    = @blog.parent.title
  .field
    = form.label :title
    = form.text_field :title
  .field
    = form.label :slug
    = form.text_field :slug
  .field
    = form.label :photo
    = form.file_field :photo
    = image_tag @blog.photo.url(:small)
  .field
    = form.submit 'Save and Continue Editing', :name => 'blog[continue_editing]'
    = form.submit 'Save and Close'
    or
    = link_to 'Cancel', admin_root_path
