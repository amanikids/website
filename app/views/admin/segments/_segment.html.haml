%li[segment]
  = link_to '&uarr;', admin_segment_path(segment, :segment => { :move_higher => true }), :method => :put
  = link_to '&darr;', admin_segment_path(segment, :segment => { :move_lower => true }), :method => :put
  = segment.title
  = link_to 'Edit', edit_admin_segment_path(segment)
  = link_to 'Delete', admin_segment_path(segment), :method => :delete, :confirm => 'Are you sure you want to delete this Segment?'
